<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="6dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGoalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvGoalProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ksh 0 / 0"
            android:textColor="@color/poeachpink"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/goalProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/poeachpink" />
        <Button
            android:id="@+id/btnUpdateSavedAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Saved Amount"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/poeachpink"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
