<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Status bar spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Header: Back arrow and title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:background="#03A9F4">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="#FFF" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="New Transaction"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- TabLayout for Expense, Income, Transfer -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                app:tabGravity="fill"
                app:tabIndicatorColor="#A389F4"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#222222"
                app:tabTextColor="#666666">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabExpense"
                    android:text="@string/expense"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabIncome"
                    android:text="@string/income"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabTransfer"
                    android:text="@string/transfer"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </com.google.android.material.tabs.TabLayout>

            <!-- Main content area: white background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="738dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <!-- Amount display: Sh 0 - MODIFIED -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sh"
                        android:textColor="#2196F3"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/amountValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:textColor="#2196F3"
                        android:textColorHint="#CCCCCC"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Category label -->

                <!-- Category row with main and subcategory -->

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#EEEEEE" />

                <!-- Category content section (static preview) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginBottom="12dp"
                        android:text="Category"
                        android:textColor="#222222"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <!-- Example category item -->
                        <LinearLayout
                            android:id="@+id/categoryRow"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_columnWeight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_bg_category">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_category"
                                    app2:tint="#FF9800" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/categoryValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Shopping"
                                android:textColor="#222222"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_arrow_right"
                                app2:tint="#AAAAAA" />
                        </LinearLayout>

                        <!-- Repeat for more categories as needed -->
                        <LinearLayout
                            android:id="@+id/subcategoryRow"

                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_columnWeight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_bg_category">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_category"
                                    app2:tint="#4CAF50" />
                            </FrameLayout>

                            <TextView
                                android:id="@+id/subcategoryValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Transport"
                                android:textColor="#222222"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- Add more category items as needed -->
                    </GridLayout>

                </LinearLayout>

                <!-- Placeholder: Category selection bottom sheet will be shown here when category row is clicked -->
                <!-- The actual bottom sheet is a separate layout and will be shown programmatically -->

                <!-- Payment Method label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="Payment Method"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <!-- Payment Method row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Payment pill -->
                    <LinearLayout
                        android:id="@+id/paymentRow"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_payment_pill"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_cash"
                            app2:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/paymentValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Cash"
                            android:textColor="#222222"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Payment value (for alignment) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="" />

                    <!-- Right arrow for row (aligned to far right) -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_right"
                        app2:tint="#AAAAAA" />
                </LinearLayout>

                <!-- Date label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:text="Date"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <!-- Date row -->

                <!-- Recurrence label -->
                <LinearLayout
                    android:id="@+id/dateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Date pill -->
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_date_pill"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app2:tint="#FFB800" />
                    </LinearLayout>

                    <!-- Date value -->
                    <TextView
                        android:id="@+id/dateValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="Sun. 04/05/2025"
                        android:textColor="#222222"
                        android:textSize="15sp" />

                    <!-- Right arrow for row (aligned to far right) -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_right"
                        app2:tint="#AAAAAA" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="Recurrence"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <!-- Recurrence row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Recurrence pill -->
                    <LinearLayout
                        android:id="@+id/recurrenceRow"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_recurrence_pill"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_repeat"
                            app2:tint="#FFB800" />
                    </LinearLayout>

                    <!-- Recurrence value -->
                    <TextView
                        android:id="@+id/recurrenceValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="None"
                        android:textColor="#222222"
                        android:textSize="15sp" />

                    <!-- Right arrow for row -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_right"
                        app2:tint="#AAAAAA" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#EEEEEE" />

                <!-- Note label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="Note"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <!-- Note row - MODIFIED for larger text input -->
                <LinearLayout
                    android:layout_width="460dp"
                    android:layout_height="160dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <EditText
                        android:id="@+id/noteValue"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/edit_text"
                        android:gravity="top|start"
                        android:hint="Click to fill in the remarks"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="8"
                        android:minLines="3"
                        android:padding="12dp"
                        android:scrollbars="vertical"
                        android:textColor="#222222"
                        android:textColorHint="#AAAAAA"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_camera"
                        app2:tint="#222222" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#EEEEEE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Button bar at the bottom - MODIFIED colors and layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Single Save button centered -->
        <TextView
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="@string/save_transaction"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/poeachpink"
            android:textStyle="bold"
            android:textSize="16sp"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="CONTINUE"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_peachpink_button"
            android:textStyle="bold"
            android:textSize="14sp" />


    </LinearLayout>
</LinearLayout>
