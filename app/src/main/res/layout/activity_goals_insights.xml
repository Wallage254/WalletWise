<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/primary">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Financial Goals and Insights"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp" />

    <!-- Goal Input Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Your Goal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/goalNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. Buy a Laptop"
                android:background="@drawable/text_background"
                android:padding="12dp" />

            <EditText
                android:id="@+id/goalAmountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target Amount"
                android:inputType="numberDecimal"
                android:background="@drawable/text_background"
                android:layout_marginTop="10dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/saveGoalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Save Goal"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/poeachpink" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable Goals List -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/goalsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Goal Progress Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/currentGoalLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal Progress"
                android:textSize="18sp"
                android:textColor="#222"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/goalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saving for: Buy a Laptop"
                android:textSize="16sp"
                android:textColor="#555"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/goalProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ksh 3,000 / 10,000"
                android:textColor="@color/poeachpink"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/goalProgressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progressTint="@color/poeachpink"
                android:progress="30"
                android:max="100" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Expense Overview with PieChart -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expense Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="10dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most spent on: Food and Dining"
                android:textSize="16sp"
                android:textColor="#444" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Money Tip Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Money Insight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/moneyTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Avoid impulse buying. Budget before spending!"
                android:textSize="16sp"
                android:textColor="#333"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
